# ============================================================
# ConsumeSafe Docker Environment Variables
# ============================================================

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=consumesafe
MYSQL_USER=consumesafe
MYSQL_PASSWORD=consumesafe123
MYSQL_HOST=mysql
MYSQL_PORT=3306

# Spring Boot Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/consumesafe?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=consumesafe
SPRING_DATASOURCE_PASSWORD=consumesafe123
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect
SPRING_PROFILES_ACTIVE=prod

# Application Configuration
SERVER_PORT=8082
SERVER_SERVLET_CONTEXT_PATH=/api
APPLICATION_NAME=ConsumeSafe

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXEMPLE=DEBUG

# Java Options
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75 -XX:+UseG1GC -XX:MaxGCPauseMillis=200
